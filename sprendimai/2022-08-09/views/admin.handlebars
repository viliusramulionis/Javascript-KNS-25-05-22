<div class="container">
    <h2>Admin</h2>
    {{#if orders}}
        <div class="filters">
            <select onchange="handleFilter(event)">
                <option value="">Pasirinkite prekę</option>
                <option value="beds">Lovos</option>
                <option value="chairs">Kėdės</option>
                <option value="tables">Stalai</option>
            </select>
        </div>
        <table class="table">
            <thead>
                    <th>Prekė</th>
                    <th>Vardas</th>
                    <th>Pavardė</th>
                    <th>El. pašto adresas</th>
                    <th>Adresas</th>
                    <th>Miestas</th>
                    <th>Telefono nr.</th>
                    <th>Sukūrimo data</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                    <tr>
                        <td>{{checked}}</td>
                        <td>{{name}}</td>
                        <td>{{lastName}}</td>
                        <td>{{email}}</td>
                        <td>{{address}}</td>
                        <td>{{city}}</td>
                        <td>{{phone}}</td>
                        <td>{{createAt}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <p>Nėra pateiktų užsakymų</p>
    {{/if}}
</div>
<script>
    const handleFilter = (event) => {
        event.preventDefault()
        const value = event.target.value

        if (value) {
            window.location.href = `/admin/?filter=${value}`
        }
    }
</script>